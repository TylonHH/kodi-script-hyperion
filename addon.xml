<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addon id="script.hyperion" name="Hyperion" version="0.0.1" provider-name="b2un0">
    <requires>
        <import addon="xbmc.python" version="2.1.0"/>
    </requires>
    <extension point="xbmc.python.script" library="default.py"/>
    <extension point="xbmc.service" library="autostart.py"/>
    <extension point="xbmc.addon.metadata">
        <language></language>
        <summary lang="en">Hyperion</summary>
        <description lang="en">Call this addon from the xbmc json-rpc to run custom Hyperion script.
            accepted commands are 'switch'. Example:
            {"jsonrpc":"2.0","id":1,"method":"Addons.ExecuteAddon",
            "params":{"addonid":"script.hyperion",
            "params":{"command":"switch"}}}
        </description>
        <platform>all</platform>
        <website>http://www.powerpi.de</website>
        <source>https://github.com/b2un0/kodi-script-hyperion/</source>
        <forum>http://powerpi.de/forum/</forum>
        <email>bw@z-index.net</email>
        <license>GNU GENERAL PUBLIC LICENSE. Version 2, June 1991</license>
    </extension>
</addon>
